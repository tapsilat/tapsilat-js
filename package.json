{
  "name": "@tapsilat/tapsilat-js",
  "version": "1.0.2",
  "description": "Enterprise-grade TypeScript SDK for Tapsilat Payment Processing Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "type": "module",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:manual": "ts-node scripts/test-sdk.ts",
    "test:all": "npm run test && npm run test:integration",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run type-check",
    "prepublishOnly": "npm run test && npm run build",
    "example": "node examples/basic-usage.js",
    "prepare": "npm run build",
    "release": "npm run test && npm run build && npm publish",
    "release:beta": "npm run test && npm run build && npm publish --tag beta"
  },
  "keywords": [
    "tapsilat",
    "payment",
    "payment-gateway",
    "fintech",
    "typescript",
    "sdk",
    "api",
    "nodejs",
    "e-commerce",
    "turkey",
    "financial-services"
  ],
  "author": {
    "name": "Tapsilat",
    "email": "support@tapsilat.dev",
    "url": "https://tapsilat.dev"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.2",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rollup": "^4.5.0",
    "@rollup/plugin-typescript": "^11.1.5",
    "rollup-plugin-dts": "^6.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "tslib": "^2.6.2"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tapsilat/tapsilat-js.git"
  },
  "bugs": {
    "url": "https://github.com/tapsilat/tapsilat-js/issues"
  },
  "homepage": "https://github.com/tapsilat/tapsilat-js#readme"
} 