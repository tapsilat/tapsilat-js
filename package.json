{
  "name": "@tapsilat/tapsilat-js",
  "version": "2026.01.14",
  "description": "Enterprise-grade TypeScript SDK for Tapsilat Payment Processing Platform",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && rollup -c",
    "dev": "rollup -c -w",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "check": "npm run lint && npm run type-check && npm run test",
    "examples:create-order": "node examples/create-order-complete.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm run check && npm run build"
  },
  "keywords": [
    "tapsilat",
    "payment",
    "payment-gateway",
    "fintech",
    "typescript",
    "sdk",
    "api",
    "nodejs",
    "e-commerce",
    "turkey",
    "financial-services"
  ],
  "author": {
    "name": "Tapsilat",
    "email": "support@tapsilat.dev",
    "url": "https://tapsilat.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.9.2",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "rollup": "^4.5.0",
    "rollup-plugin-dts": "^6.1.0",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "js-yaml": "4.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tapsilat/tapsilat-js.git"
  },
  "bugs": {
    "url": "https://github.com/tapsilat/tapsilat-js/issues"
  },
  "homepage": "https://github.com/tapsilat/tapsilat-js#readme"
}
